<%- include('header_connected') %>

<div id="inputContainer" class="container w-50 p-5">
    <div class="mb-5 text-center display-4">
        <h1 >Modification d'une Mutuelle</h1>
    </div>
    <div> <% dataMutuelle.forEach(function(res){ %>
        <form action="/mutuelle/modifier/<%= res.mutu_id %>" method="post" enctype="application/x-www-form-urlencoded">
            <div class="row">
                <div class="input-group mb-3">
                    <span class="input-group-text" for="mutuNom">Nom</span>
                    <input type="text" class="form-control" id="mutuNom" name="mutuNom" value="<%= res.mutu_nom %>">
                </div>
                <br>
                <hr class="my-4">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-success btn-block" id="btnModifierMutuelle">Modifier</button>
                </div>
            </div>
            <% }) %> 
        </form>
    </div>
    <a href="http://localhost:3000/mutuelle"><img src="/images/retour.png" class="li-icon"></a>
</div>

<%- include('footer') %>